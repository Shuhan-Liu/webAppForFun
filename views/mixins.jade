//- Navbar mixins
mixin nav(name, id, classes)
    - var style = (typeof style === 'undefined') ? "default" : style
    nav( role="navigation", class=classes )
        .navbar-header
            button.navbar-toggler( type="button", data-toggle="collapse", data-target="#" + id, aria-expanded="false", aria-controls="navbar")
                span.navbar-toggler-icon
            a.navbar-brand(href="#")= name
 
        .collapse.navbar-collapse( id=id )
            ul.nav.navbar-nav
                block
 
mixin nav_item(href, active)
    li(class=["nav-item", active]): a(class="nav-link" href=href )
        block
 
mixin nav_item_dropdown(href, active)
    li(class=["nav-item", "dropdown", active])
        a.nav-link.dropdown-toggle( href=href, data-toggle="dropdown", aria-haspopup="true", aria-expanded="false" )= attributes.label
        ul.dropdown-menu
            block
mixin dropdown_item(href, active)
    li: a(class=["dropdown-item", active] href=href)
        block
mixin dropdown_divider
    li.dropdown-divider
 
mixin nav_divider
    li.divider
 
mixin nav_header
    li.dropdown-header
        block
 
//- End navbar mixins

//- Button mixins
mixin button(style, href, size)
    - var style = (typeof style === 'undefined') ? "default" : style
    - var href = (typeof href === 'undefined') ? "#" : href
    case size
        when "large"
            - size = "btn-lg"
        when "small"
            - size = "btn-sm"
        when "mini"
            - size = "btn-xs"
 
    a( class=["btn", "btn-" + style, size], href=href )
        block
//- End Button mixins